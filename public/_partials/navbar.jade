nav(class='navbar navbar-inverse navbar-fixed-top')
  .container
    div(class='navbar-header')
      button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#sitepaths" )
        span(class="icon-bar")
        span(class="icon-bar")
        span(class="icon-bar")
      a(class="navbar-brand" href=paths[0].url) #{ title }
    
    div(class="collapse navbar-collapse", id="sitepaths")
      ul(class="nav navbar-nav navbar-right")
        for path in paths
          if !path.subsections
            li: a(href=path.url)= path.name
          else
            li.dropdown 
              a.dropdown-toggle(href=path.url, data-toggle="dropdown", role="button" aria-haspopup="true" aria-expanded="false")= path.name
              ul.dropdown-menu
                for sub in path.subsections
                  li: a(href=sub.url)= sub.name
